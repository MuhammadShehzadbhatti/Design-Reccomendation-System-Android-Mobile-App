<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShopDetailsFragment"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:background="@color/colorPrimary">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <RelativeLayout
        android:id="@+id/shopDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <ImageView
            android:id="@+id/mapImage"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/mapimg"
            android:elevation="2dp"/>

        <TextView
            android:id="@+id/txtContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mapImage"
            android:layout_marginTop="10dp"
            android:fontFamily="Roboto"
            android:text="Contact"
            android:textColor="#303030"
            android:textSize="17dp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/contactDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtContact"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:padding="5dp"
            android:elevation="2dp">

            <LinearLayout
                android:id="@+id/images"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/phoneImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/phone_black_24dp" />

                <ImageView
                    android:id="@+id/addressImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/ic_location_on_black_24dp" />

                <ImageView
                    android:id="@+id/emailImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/ic_email_black_24dp" />

                <ImageView
                    android:id="@+id/webImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/ic_public_black_24dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/txts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@id/images"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/txtPhoneNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="Roboto"
                    android:text="+49 1234567890"
                    android:textColor="#303030"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/txtAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="Roboto"
                    android:text="Bayreuth, Germany"
                    android:textColor="#303030"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/txtEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:fontFamily="Roboto"
                    android:text="example@example.com"
                    android:textColor="#303030"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/txtWeb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="Roboto"
                    android:text="www.example.com"
                    android:textColor="#303030"
                    android:textSize="15dp" />
            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/txtTimings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/contactDetails"
            android:layout_marginTop="10dp"
            android:fontFamily="Roboto"
            android:text="Timings"
            android:textColor="#303030"
            android:textSize="17dp"
            android:textStyle="bold" />
        <RelativeLayout
            android:id="@+id/txtTimingDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtTimings"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:padding="5dp"
            android:elevation="10dp">

            <LinearLayout
                android:id="@+id/txtDayNames"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtMonday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="10dp"
                    android:fontFamily="Roboto"
                    android:text="Monday"
                    android:textColor="#303030"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/txtTuesday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtMonday"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="10dp"
                    android:fontFamily="Roboto"
                    android:text="Tuesday"
                    android:textColor="#303030"
                    android:textSize="15dp" />
                <TextView
                    android:id="@+id/txtWednesday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtTuesday"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="10dp"
                    android:fontFamily="Roboto"
                    android:text="Wednesday"
                    android:textColor="#303030"
                    android:textSize="15dp" />
                <TextView
                    android:id="@+id/txtThursday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtWednesday"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="10dp"
                    android:fontFamily="Roboto"
                    android:text="Thursday"
                    android:textColor="#303030"
                    android:textSize="15dp" />
                <TextView
                    android:id="@+id/txtFriday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtThursday"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="10dp"
                    android:fontFamily="Roboto"
                    android:text="Friday"
                    android:textColor="#303030"
                    android:textSize="15dp" />
                <TextView
                    android:id="@+id/txtSaturday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtFriday"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="10dp"
                    android:fontFamily="Roboto"
                    android:text="Saturday"
                    android:textColor="#303030"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/txtSunday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtSaturday"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="10dp"
                    android:fontFamily="Roboto"
                    android:text="Sunday"
                    android:textColor="#303030"
                    android:textSize="15dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/txtDayTiming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtMondayTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="Roboto"
                    android:text="08:00 - 20:00"
                    android:textColor="#303030"
                    android:textSize="15dp" />


                <TextView
                    android:id="@+id/txtTuesdayTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="Roboto"
                    android:text="08:00 - 20:00"
                    android:textColor="#303030"
                    android:textSize="15dp" />


                <TextView
                    android:id="@+id/txtWednesdayTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="Roboto"
                    android:text="08:00 - 20:00"
                    android:textColor="#303030"
                    android:textSize="15dp" />


                <TextView
                    android:id="@+id/txtThursdayTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="Roboto"
                    android:text="08:00 - 20:00"
                    android:textColor="#303030"
                    android:textSize="15dp" />


                <TextView
                    android:id="@+id/txtFridayTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="Roboto"
                    android:text="08:00 - 20:00"
                    android:textColor="#303030"
                    android:textSize="15dp" />


                <TextView
                    android:id="@+id/txtSaturdayTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="Roboto"
                    android:text="08:00 - 20:00"
                    android:textColor="#303030"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/txtSundayTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="Roboto"
                    android:text="08:00 - 20:00"
                    android:textColor="#303030"
                    android:textSize="15dp" />
            </LinearLayout>
        </RelativeLayout>


        <!--<RelativeLayout
            android:id="@+id/txtTimingDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtTimings"
            android:layout_marginTop="18dp"
            android:background="#ffffff"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="10dp"
            android:elevation="5dp">

        </RelativeLayout>-->
    </RelativeLayout>
    </ScrollView>
</RelativeLayout>