<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="#FFFFFF"
    android:layout_marginBottom="15dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp">

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/shopNameAndLogo">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/homeShoplogo"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/grocerapp"
                app:civ_border_color="#FFBD2E"
                app:civ_border_width="3dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/homeShopNameOnAd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="Shop Name"
                android:textSize="14dp"
                android:fontFamily="Roboto"
                android:textColor="#646464"
                android:layout_toRightOf="@id/homeShoplogo"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/homeProductPercentOff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="10%"
                android:textSize="17dp"
                android:fontFamily="Roboto"
                android:textStyle="bold"
                android:textColor="#00FF08"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageAndDiscount"
            android:layout_below="@id/shopNameAndLogo"
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/homeProductImage"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:padding="1dp"
                android:layout_centerVertical="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/rectangular_border"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@id/productNameAndQuantity"
            android:layout_below="@id/imageAndDiscount">
            <TextView
                android:id="@+id/homeProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="Yellow Capsicum (Fresh)"
                android:textSize="17dp"
                android:fontFamily="Roboto"
                android:textColor="#646464"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/homeProductQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="150g"
                android:textSize="17dp"
                android:fontFamily="Roboto"
                android:textColor="#646464"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"/>
        </RelativeLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>