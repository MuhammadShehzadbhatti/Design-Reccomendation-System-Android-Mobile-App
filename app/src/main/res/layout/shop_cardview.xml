<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="#FFFFFF"
    android:layout_marginBottom="15dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageAndDiscount">
            <ImageView
                android:id="@+id/productImage"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:padding="1dp"
                android:layout_centerVertical="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/rectangular_border"/>
            <TextView
                android:id="@+id/productPercentOff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="10%"
                android:textSize="15dp"
                android:fontFamily="Roboto"
                android:textStyle="bold"
                android:textColor="#00FF08"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/ic_public_black_24dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/productNameAndQuantity"
            android:layout_below="@id/imageAndDiscount">
                <TextView
                    android:id="@+id/productName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="Yellow Capsicum (Fresh)"
                    android:textSize="15dp"
                    android:fontFamily="Roboto"
                    android:textColor="#646464"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:id="@+id/productQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="150g"
                    android:textSize="15dp"
                    android:fontFamily="Roboto"
                    android:textColor="#646464"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="5dp"/>
        </RelativeLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>